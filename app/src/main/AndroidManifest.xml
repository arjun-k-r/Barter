<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="open.hive.barter">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/barter_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/barter_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:theme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".HomeActivity" />
        <activity
            android:name=".ItemsUploadedActivity"
            android:label="@string/title_activity_items_uploaded"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UploadActivity"></activity>
    </application>

</manifest>